<div class="container">
  <h1>Reviews for <em><%= @restaurant.name %></em></h1>
  <%= link_to "Back to Restaurants",
              restaurants_path
              %>
  <hr>
  <% @reviews.each do |review| %>
    <p><%= review.content %></p>
    <p><%= review.rating %>/5</p>
    <hr>
  <% end %>
  <%= link_to "Back to Restaurants",
              restaurants_path
              %>
</div>
