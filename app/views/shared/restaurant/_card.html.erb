<div class="col">
  <div class="card m-3">
    <%= image_tag "https://source.unsplash.com/random/297x180?sig=#{rand(1..100)}", alt: "unsplash", width: 300, height: 200, class: "card-img-top" %>
    <div class="card-body bg-light justify-content-between d-flex">
      <h5 class="card-title">
        <%= link_to restaurant.name, restaurant_path(restaurant), class: "link-unstyled text-success" %>
      </h5>
      <p class="card-text">
        <%= restaurant.category.capitalize %>
      </p>
    </div>
    <div class="card-footer justify-content-between d-flex">
      <small class="text-muted">
        Average rating: <%= int_to_stars(restaurant.average_rating, Review.max_review_rating) %>
      </small>
      <small class="text-muted">
        <%= link_to "See all #{restaurant.reviews.count} review(s)", restaurant_reviews_path(restaurant) %>
      </small>
    </div>
  </div>
</div>
